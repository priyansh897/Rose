<script>

/* floating hearts start */
for(let i=0;i<25;i++){
    let h=document.createElement("div");
    h.className="heart";
    h.innerHTML="â¤";
    h.style.left=Math.random()*100+"vw";
    h.style.animationDuration=(4+Math.random()*5)+"s";
    document.body.appendChild(h);
}

/* PAGE FLOW */
function openLetter(){
    page1.style.opacity="0";
    page1.style.pointerEvents="none";
    setTimeout(()=>{
        page2.style.opacity="1";
        page2.style.pointerEvents="auto";
        page2.style.transform="scale(1)";
    },500);
}

function openRose(){
    page2.style.opacity="0";
    page2.style.pointerEvents="none";
    setTimeout(()=>{
        page3.style.opacity="1";
        page3.style.pointerEvents="auto";
        page3.style.transform="scale(1)";
        document.getElementById("rose").classList.add("bloom");
    },500);
}

function openKiss(){
    page3.style.opacity="0";
    page3.style.pointerEvents="none";
    setTimeout(()=>{
        page4.style.opacity="1";
        page4.style.pointerEvents="auto";
        page4.style.transform="scale(1)";
        document.getElementById("kiss").classList.add("show");
    },500);
}

/* restart */
function restart(){
    location.reload();
}

</script>

